{
  "manifest_version": 2,
  "name": "YouTubeNoComments",
  "version": "1.2",
  "description": "Removes stupid comments from YouTube. I.E. All Comments.",
  "icons": {
    "48": "icons/comment_remove.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtubenocomments.js"]
    }
  ]

}